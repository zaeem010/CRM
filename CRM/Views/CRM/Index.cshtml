                                        </tr>*@


                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--Table End-->
        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>
<!-- [ Main Content ] end -->
<script>

    $(function () {
        var availableTags = [
            @foreach (var Lst in Model.Contacts)
            {
                <text>"@Lst.Contact",</text>
            }
        ];
        $("#tags").autocomplete({
            minLength: 3,
            source: availableTags
        });

    });

    function Action(id) {
        //let date = new Date(Date.parse('DD.MM.YYYY H:mm'));
        //alert(date);

        var count = document.getElementById("tags").value.length;
        //alert(count);
        if (count == 0) {
            $("#Cus").val('');
            $("#City").val('');
            $("#Country").val('');
            $('#Url').val('');
            $('#Address').val('');
            $('#Email').val('');
            $('#Remarks').val('');
            $("#tblClients tbody tr").remove();
        }
        $.ajax({
            url: '@Url.Action("Action", "CRM")',
            type: "POST",
            data: { "id": id },
        "success": function (data) {
        if (data != null) {
            var vdata = data;
            $("#Cus").val(vdata[0].cusName);
            $("#City").val(vdata[0].city);
            $("#Country").val(vdata[0].country);
            $('#Url').val(vdata[0].webUrl);
            $('#Address').val(vdata[0].address);
            $('#Email').val(vdata[0].email);
            $('#Remarks').val(vdata[0].remarks);
            }

    }
        });
          $.ajax({
              url: '@Url.Action("GetCRMList", "CRM")',
              type: "GET",
              contentType: "application/json; charset=utf-8",
              data: { 'id': id },
              dataType: "json",
              success: function (data1) {

                  document.getElementById("lblmodAlertClient").innerHTML = data1.length + " records found";
                  if (data1 != null) {
                      $.each(data1, function (i, item) {
                          
                          var row = "";
                          row += "<tr><td>" + item.userid
                              //+ "</td><td>" + item.dateTime
                              + "</td><td>" + moment(item.dateTime).format('DD-MM-YYYY H:mm A')
                              + "</td><td>" + item.remarks
                              + "</td></tr>";
                          $('#tblClients tbody').append(row);
                      })
                  }
              },
              error: function (result) {
                  alert("Error");
              }
          });
          if ($("#tags").val().length > 1) {
              $("#Cus").val('');
              $("#City").val('');
              $("#Country").val('');
              $('#Url').val('');
              $('#Address').val('');
              $('#Email').val('');
              $('#Remarks').val('');
              $("#tblClients tbody tr").remove();
          }
    };

