@model IEnumerable<CRM.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ Main Content ] start -->
        <div class="row">
            <!-- Zero config table start -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Users</h5>
                    </div>
                        <a asp-action="Create" class="btn btn-primary col-md-2 offset-sm-10 text-left"><i class="feather icon-plus"></i>Create New</a>
                    <div class="card-body">
                        <div class="dt-responsive table-responsive">
                            <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>User Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>User Name</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var lst in Model)
                                    {
                                        <tr>
                                            <td>@lst.Name</td>
                                            <td>@lst.UserName</td>
                                            @if (lst.id == 1)
                                            {
                                            <td></td>
                                            }
                                            else
                                            {
                                            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@lst.id"><i class="feather icon-trash"></i></a></td>
                                            }
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Zero config table end -->
      
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>
<!-- [ Main Content ] end -->