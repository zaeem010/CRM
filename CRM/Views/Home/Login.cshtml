@model CRM.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="auth-wrapper">
    <div class="auth-content">
        <div class="card">
            <div class="row align-items-center text-center">
                <div class="col-md-12">
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <img src="assets/images/logo-dark.png" alt="" class="img-fluid mb-4">
                            <h4 class="mb-3 f-w-400">Signin</h4>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="feather icon-user"></i></span>
                                </div>
                                <input type="text" required class="form-control" asp-for="UserName" placeholder="User Name">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="feather icon-lock"></i></span>
                                </div>
                                <input type="password" required asp-for="Password" class="form-control" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-block btn-primary mb-4">Signin</button>
                            <br />
                            <p class="bg-danger">@TempData["Invalid"]</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
